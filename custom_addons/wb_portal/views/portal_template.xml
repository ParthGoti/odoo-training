<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="portal_my_home" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="url">/my/students</t>
                <t t-set="title">Students</t>
                <t t-set="placeholder_count" t-value="'student_counts'" />
            </t>
        </xpath>
    </template>

    <template id="portal_breadcrumbs" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'students_list_view'" class="breadcrumb-item">Students</li>
            <li t-if="page_name == 'students_form_view'" class="breadcrumb-item">
                <a href="/my/students">Students</a>
            </li>
        </xpath>
    </template>

    <template id="wb_students_list_view_portal">
        <t t-call="portal.portal_layout" >
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Students333</t>
            </t>
            <t t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-center">ID</th>
                        <th class="text-center">Photo</th>
                        <th class="text-center">Name</th>
                        <th class="text-center">School</th>
                        <th class="text-center">Roll Number</th>
                        <th class="text-center">Fees</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="students" t-as="student">
                        <tr>
                            <td class="text-center">
                                <a t-attf-href="/my/student/#{student.id}">
                                    <t t-out="student.id" />
                                </a>
                            </td>
                            <td>
                                <t t-if="student.student_img">
                                    <img t-attf-src="data:image/png;base64,{{student.student_img}}" alt="avatar" class="rounded-circle img-fluid" style="width:60px;height:60px;" />
                                  </t>
                                  <t t-else="">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                        class="rounded-circle img-fluid"  style="width:60px;height:60px;" />
                                  </t>
                            </td>
                            <td class="text-center">
                                <a t-attf-href="/my/student/#{student.id}">
                                    <t t-out="student.name" />
                                </a>
                            </td>
                            <td class="text-center">
                                <t t-out="student.school_id.name" />
                            </td>
                            <td class="text-center">
                                <t t-out="student.roll_number" />
                            </td>
                            <td class="text-center">
                                <t t-out="student.total_fees" />
                            </td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <template id="wb_students_form_view_portal" inherit_id="portal.portal_sidebar">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-if="page_name == 'students_form_view'">
                <section style="background-color: #eee;">
                  <div class="container py-5">
                    <div class="row">
                      <div class="col-lg-4">
                        <div class="card mb-4">
                          <div class="card-body text-center">
                              <t t-if="student.student_img">
                                <img t-attf-src="data:image/png;base64,{{student.student_img}}" alt="avatar" class="rounded-circle img-fluid" style="width:150px;" />
                              </t>
                              <t t-else="">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
                                    class="rounded-circle img-fluid" style="width: 150px;" />
                              </t>
                            <h5 class="my-3"><t t-out="student.name"/></h5>
                            <p class="text-muted mb-1"><t t-out="student.school_id.name"/></p>
                            <p class="text-muted mb-4"><t t-out="student.school_id.address"/></p>
                          </div>
                        </div>
                      </div>
                      <div class="col-lg-8">
                        <div class="card mb-4">
                          <div class="card-body">
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">Full Name</p>
                              </div>
                              <div class="col-sm-9">
                                <p class="text-muted mb-0"><t t-out="student.name"/></p>
                              </div>
                            </div>
                            <hr/>
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">School</p>
                              </div>
                              <div class="col-sm-9">
                                <p class="text-muted mb-0"><t t-out="student.school_id.name"/></p>
                              </div>
                            </div>
                            <hr/>
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">Total Fees</p>
                              </div>
                              <div class="col-sm-9">
                                <p class="text-muted mb-0"><t t-out="student.total_fees"/></p>
                              </div>
                            </div>
                            <hr/>
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">Roll Number</p>
                              </div>
                              <div class="col-sm-9">
                                <p class="text-muted mb-0"><t t-out="student.roll_number"/></p>
                              </div>
                            </div>
                            <hr/>
                            <div class="row">
                              <div class="col-sm-3">
                                <p class="mb-0">School Address</p>
                              </div>
                              <div class="col-sm-9">
                                <p class="text-muted mb-0"><t t-out="student.school_id.address"/></p>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </section>
            </t>
        </xpath>
    </template>

</odoo>