<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="school_student_profile_custom_report_template_second">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=lang)" />
            <div class="page">
                    <div class="oe_structure" />
                    111 <p t-out="lang" /> 000
                    <p t-out="o._context" />
                    <p t-out="docs._context" />
                    <div class="col-12 text-center">
                        <img alt="img" t-if="o.student_img" t-att-src="image_data_uri(o.student_img)"
                             style="max-height:150px;"/>
                        <h2 t-field="o.name" style="border-bottom:1px solid black;"/>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-3 text-center">
                            <b>School Name</b>
                            <p t-field="o.school_id" />
                        </div>
                        <div class="col-9 text-right">
                            <b>School Address</b>
                            <p t-field="o.school_address" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-4">
                            <b>Roll Number</b>
                            <p t-field="o.roll_number" />
                        </div>
                        <div class="col-4">
                            <strong>Student Sequence</strong>
                            <p t-out="o.student_seq if o.student_seq else 'Not Available'" />
                        </div>
                        <div class="col-4">
                            <b>Hobby List</b>
                            <p t-field="o.hobby_list" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-4">
                            <b>Is Virtual School</b>
                            <p t-out="o.is_virtual_school if o.is_virtual_school else 'Not Available'" />
                        </div>
                        <div class="col-4">
                            <b>Currency</b>
                            <p t-field="o.currency_id" />
                        </div>
                        <div class="col-4">
                            <b>Student Fees</b>
                            <p t-out="o.student_fees" />
                        </div>
                    </div>

                    <div class="row" style="margin-top:10px;">
                        <div class="col-4">
                            <b>Birthdate</b>
                            <p t-out="o.bdate or 'Not Available'" />
                        </div>
                        <div class="col-4">
                            <b>Student Age</b>
                            <p t-out="o.student_age" />
                        </div>
                        <div class="col-4">
                            <b>Total Fees</b>
                            <p t-out="o.total_fees" />
                        </div>
                    </div>

                </div>
        </t>


    </template>

    <template id="main_school_student_profile_custom_report_template_second">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="docs._context.get('lang')" />
                <t t-call="wbcustom_header_foooter_pdf.school_student_profile_custom_report_template_second" t-lang="lang" />
            </t>
        </t>
    </template>

    <record id="school_student_profile_report_temp_second" model="ir.actions.report">
        <field name="name">Custom Student Card Second</field>
        <field name="model">school.student</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">wbcustom_header_foooter_pdf.main_school_student_profile_custom_report_template_second</field>
        <field name="report_file">wbcustom_header_foooter_pdf.main_school_student_profile_custom_report_template_second</field>
        <field name="print_report_name">'Student-Card'</field>
        <field name="binding_model_id" ref="school_student.model_school_student"/>
        <field name="binding_type">report</field>
    </record>
</odoo>